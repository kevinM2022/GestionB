@model IEnumerable<LibroDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnioPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CopiasDisponibles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoresIds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaIds)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnioPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CopiasDisponibles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoresIds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaIds)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LibroId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LibroId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LibroId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
